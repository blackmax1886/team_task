{{ define "Index" }}
{{template "Header"}}
<h2> Index </h2>
<table>
    <thead>
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Content</td>
    </tr>
    </thead>
    <tbody>
    {{ range . }}
    <tr>
        <td>{{ .Id }}</td>
        <td> {{ .Name }} </td>
        <td>{{ .Content }} </td>
        <td><a href="/show?id={{ .Id}}">View</a></td>
    </tr>
    {{ end }}
    </tbody>
</table>
{{template "Footer"}}
{{end}}